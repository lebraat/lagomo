{
  "name": "lagomo",
  "version": "1.0.0",
  "description": "Time tracking app with Web3 authentication",
  "main": "server/index.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "test": "NODE_ENV=test mocha server/test/**/*.test.js --exit",
    "test:coverage": "NODE_ENV=test nyc mocha server/test/**/*.test.js --exit",
    "test:watch": "NODE_ENV=test mocha server/test/**/*.test.js --watch",
    "test:debug": "NODE_ENV=test mocha server/test/**/*.test.js --inspect-brk",
    "prepare": "husky install",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@aws-sdk/client-secrets-manager": "^3.716.0",
    "@openzeppelin/contracts": "^5.1.0",
    "@wagmi/core": "^2.16.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ethers": "^6.13.4",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "hardhat": "^2.22.17",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.13.1",
    "pg-hstore": "^2.3.4",
    "sequelize": "^6.37.5",
    "siwe": "^2.1.4",
    "viem": "^2.21.60",
    "wagmi": "^2.14.6"
  },
  "devDependencies": {
    "chai": "^4.3.7",
    "chai-http": "^4.4.0",
    "eslint": "^8.56.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "prettier": "^3.1.1",
    "sinon": "^15.2.0"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write",
      "npm test -- --findRelatedTests"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
